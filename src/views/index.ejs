<%- contentFor ('title') %> Mis Tareas ♥ <%- contentFor('body') %>
<main>
  <!-- Este es el contenido que se cargará en el layout sección body -->
  <h1>Tareas</h1>
  <form action=""></form>
  <h2>Crear Tarea</h2>
  <form action="/" method="post">
    <div>
      <label for="title">Nombre: </label>
      <input type="text" name="title" id="title" />
    </div>
    <button type="submit">Enviar</button>
  </form>

  <h2>Listado de Tareas</h2>
  <ul>
    <!-- Comienza a usar js -->
    <% tareas.forEach(tarea => { %> <%- include('partials/item', { tarea }) %>
    <%})%>
  </ul>
</main>
